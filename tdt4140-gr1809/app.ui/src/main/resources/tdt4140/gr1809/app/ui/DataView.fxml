<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.ComboBox?>
<AnchorPane maxHeight="750" maxWidth="880" minHeight="400.0" minWidth="600.0" prefHeight="750" prefWidth="880"
            styleClass="root" stylesheets="" xmlns="http://javafx.com/javafx/8.0.141"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="tdt4140.gr1809.app.ui.view.DataViewController">
    <VBox prefWidth="Infinity" prefHeight="Infinity">
        <AnchorPane prefHeight="525" fx:id="graphAnchorPane" layoutX="79.0" prefWidth="880.0" minWidth="800">

        </AnchorPane>
        <HBox prefHeight="175">
            <padding>
                <Insets left="20.0" right="20.0"/>
            </padding>
            <HBox>
                <padding>
                    <Insets top="20.0" left="10.0" right="10.0"/>
                </padding>
                <VBox prefHeight="213.0" prefWidth="75.0">
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <HBox.margin>
                        <Insets left="10.0"/>
                    </HBox.margin>
                    <Label text="Statistics">
                        <font>
                            <Font size="15.0"/>
                        </font>
                    </Label>
                    <Label text="Avg:"/>
                    <Label text="Max"/>
                    <Label text="Min"/>
                </VBox>
                <VBox prefHeight="100.0" prefWidth="200.0">
                    <padding>
                        <Insets left="20.0" right="20.0"/>
                    </padding>
                    <Label fx:id="timePeriodLabel" text="Last Hour">
                        <font>
                            <Font size="15.0"/>
                        </font>
                    </Label>
                    <Label text="150"/>
                    <Label text="180"/>
                    <Label text="45"/>
                </VBox>
            </HBox>
            <VBox>
                <Button maxHeight="Infinity" mnemonicParsing="false" onAction="#plotDataLastQuarter"
                        prefHeight="66.0" prefWidth="266.0" text="15 minutes" VBox.vgrow="ALWAYS"/>
                <Button maxHeight="Infinity" mnemonicParsing="false" onAction="#plotDataLastHour"
                        prefHeight="66.0" prefWidth="266.0" text="Hour" VBox.vgrow="ALWAYS"/>
                <Button maxHeight="Infinity" mnemonicParsing="false" onAction="#plotDataLast24Hours"
                        prefHeight="66.0" prefWidth="266.0" text="24Hours" VBox.vgrow="ALWAYS"/>
                <Button maxHeight="Infinity" mnemonicParsing="false" onAction="#plotDataLastWeek"
                        prefHeight="66.0" prefWidth="266.0" text="Week" VBox.vgrow="ALWAYS"/>
                <Button maxHeight="Infinity" mnemonicParsing="false" onAction="#plotDataLastMonth"
                        prefHeight="66.0" prefWidth="266.0" text="Month" VBox.vgrow="ALWAYS"/>
                <Button maxHeight="Infinity" mnemonicParsing="false" onAction="#plotDataLastYear"
                        prefHeight="66.0" prefWidth="266.0" text="Year" VBox.vgrow="ALWAYS"/>
            </VBox>

            <VBox prefWidth="250">
                <padding>
                    <Insets left="20.0" right="20.0" top="55.0"/>
                </padding>
                <Label text="Data Type" prefHeight="30"/>
                <ComboBox fx:id="dataDropdown" onAction="#selectDataType" prefWidth="250">

                </ComboBox>
            </VBox>

        </HBox>
    </VBox>

</AnchorPane>
