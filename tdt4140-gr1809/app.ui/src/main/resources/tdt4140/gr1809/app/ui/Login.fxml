<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane minHeight="750.0" minWidth="880.0" prefHeight="750.0" prefWidth="880.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tdt4140.gr1809.app.ui.login.LoginController">
   <left>
      <VBox alignment="TOP_RIGHT" prefWidth="200.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets top="120.0" />
         </BorderPane.margin>
         <children>
            <TilePane alignment="TOP_RIGHT" maxWidth="200.0" orientation="VERTICAL" prefHeight="400.0" prefTileWidth="200.0" prefWidth="200.0" tileAlignment="TOP_RIGHT" vgap="20.0">
               <children>
                  <Label prefHeight="16.0" prefWidth="200.0" text="User Login">
                     <font>
                        <Font size="28.0" />
                     </font>
                  </Label>
                  <TextField fx:id="UsernameTextfield" prefHeight="32.0" prefWidth="232.0" promptText="username" text="">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </TextField>
                  <PasswordField fx:id="PasswordTextfield" prefHeight="32.0" prefWidth="232.0" promptText="password">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </PasswordField>
                  <Button fx:id="LoginButton" mnemonicParsing="false" onAction="#initialLoginRequest" prefHeight="32.0" prefWidth="200.0" text="Login">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Button>
                  <Button fx:id="CreateUserButton" mnemonicParsing="false" onAction="#initialCreateuserRequest" prefHeight="32.0" prefWidth="100.0" text="Register">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Button>
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </TilePane>
         </children>
      </VBox>
   </left>
   <right>
      <VBox alignment="BOTTOM_CENTER" prefHeight="723.0" prefWidth="200.0" BorderPane.alignment="BOTTOM_LEFT">
         <children>
            <Button mnemonicParsing="false" onAction="#serviceproviderLoginRequest" prefHeight="38.0" prefWidth="140.0" text="Service Provider">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </right>
</BorderPane>

